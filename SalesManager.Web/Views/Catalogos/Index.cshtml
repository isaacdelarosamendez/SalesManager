@model SalesManager.Models.DB.entidades

@{
    ViewBag.Title = Model.nombre;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-xs-12">
        @Html.ActionLink("Nuevo",(Model.actionCreate+Model.entidadId.ToString()),Model.controller,new { @class="btn btn-primary"})
    </div>
     <div class="col-sm-12 col-xs-12">
         <table id="dtDinamic" class="table table-responsive table-bordered table-condensed">
             <thead></thead>
             <tbody></tbody>
         </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        LlenarTablaDinamica(@Model.entidadId,'#dtDinamic','@Url.Action("GetValuesTable", "Catalogos")','@Model.PK','@(Url.Action(Model.actionUpdate,Model.controller) +"?id="+ Model.entidadId.ToString() +"&itemID=")','');
    });
</script>
